<html>
  <head>
    <title>Login</title>
    <%= javascript_include_tag "jquery" %>

    <script language="javascript" type="text/javascript" src="/javascripts/jquery.ui.draggable.js"></script>
    <script language="javascript" type="text/javascript" src="/javascripts/jquery.alerts.js"></script>

    <link href="/stylesheets/jquery.alerts.css" rel="stylesheet" type="text/css" media="screen" />
    <link rel="stylesheet" type="text/css" href="/stylesheets/application.css" />

    <style type="text/css">
      body {
        background-color: #fff;
        overflow: hidden;
        color: #345477;
        font-family: "Nimbus Sans L", "Arial Narrow", sans-serif;
        margin: 0px;

      }

      table {
        font-size: 32px;
      }

      input {
        font-size: 24px;
        padding: 10px;
      }
    </style>
  </head>
  <body>

    <div style="height: 100%; width: 100%; text-align: center; opacity: 0.15;
         vertical-align: middle; position: absolute; ">
      <img src="/images/coatOfArms.png" style="height: 80%; margin: 2%;" />
    </div>

    <% if !flash[:messages].blank?  %>
      <script type="text/javascript "> jAlert(<%=flash[:messages].to_json %>, "Login Unsuccessful");</script>
    <%end%>

    <div style="position: absolute; width: 100%; height: 100%; vertical-align: middle;
         text-align: center; padding-top: 10%;">

      <h1 style="font-size: 42px; font-weight: normal;">
        Admin Panel Login
      </h1>

      <% form_for :user, :url => {:controller =>:edits , :action => :verify_user } do |form| %>

        <table style="margin: auto; margin-top: 100px;" cellpadding="10">
          <tr>
            <td>
              Username
            </td>
            <td>
              <%= form.text_field :username, :size => 15 %>
              <!--input type="text" id="username" value="" /-->
            </td>
          </tr>
          <tr>
            <td>
              Password
            </td>
            <td>
              <%= form.password_field :password, :size => 15 %>
              <!--input type="password" id="password" value="" /-->
            </td>
          </tr>
          <tr>
            <td colspan="2" align="center">
              <button class="button blue" style="width: 200px;">
                Login
              </button>
            </td>
          </tr>
        </table>

        <%= error_messages_for :user %>

      <%end %>

    </div>

  </body>
</html>
