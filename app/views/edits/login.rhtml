<html>
    <head>
      <title>Login</title>
      <link rel="stylesheet" type="text/css" href="/stylesheets/application.css" />

      <script type="text/javascript" src="/javascripts/application.js"></script>
      <style>

          input{
              font-size: 35;
              background-color: #f5f5f5;
              border-radius:10px;
          }

          button{

              width: 250px;
              height: 70px;
              font-size: 35;
              border-radius: 25px;
              border: 2px solid black;
              background-color: #d2691e;
              color: #ffffff;
          }

          caption {
           font-size: 50;
          }

      </style>

      <script type="text/javascript ">

        function submit(){
            document.forms[0].submit
        }

      </script>

    </head>
    <body>

        <% if !flash[:messages].blank?  %>
           <script type="text/javascript "> alert(<%=flash[:messages].to_json %>);</script>
        <%end%>
        <div id="main" style="border: 1px #666 solid;height: 100%;background-color:black; ; text-align: center">

          <br><font color="white "  size="7" >Welcome to Facility Dashboard</font>

          <img src="/images/coatOfArms.png" alt="" height="120" style="position: absolute; top: 25px; right: 30px;" />

          <div style=" color:black;  border: 1px solid black;border-radius:15px; width: 50%;height: 65%;background-color: #daa510; ; margin-top:5%;margin-left:25% " >
            <br>
            <table style="width:100%; height: 100%; text-align: center; font-size: 40; color: black;border-radius:15px;" >
              <caption >
                User Login
              </caption>
              <tr><td>

                <% form_for :user, :url => {:controller =>:edits , :action => :verify_user } do |form| %>

                    Username  : <%= form.text_field :username, :size => 15, :placeholder => 'username....' %><br><br>

                    Password  : <%= form.password_field :password, :size => 15, :placeholder => "password...." %><br><br>

                    <%= error_messages_for :user %>

                    <br>

                    <button onclick="submit()"  >Login</button>

                <%end %>


              </td></tr>
            </table>


          </div>

        </div>
    </body>
</html>