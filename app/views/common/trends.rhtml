<html>

  <head>
    <title>Attendance Trends</title>
  </head>

  <script language="javascript" type="text/javascript" src="/javascripts/flotr2.min.js"></script>

  <script type="text/javascript ">

    function draw_trend(){

        var graph_area = document.getElementById("graph");


        graph = Flotr.draw(graph_area,<%= @data_list %>, {xaxis :{ticks : <%=@days.to_json %>, min:0, max:6},
        yaxis: {min:0, max:<%= @max.to_json %>}, legend: {position :'ne', backgroundColor: '#D2E8FF'}});

    }
    setTimeout("draw_trend()", 30);
  </script>

  <body>

    <div align="center" style="text-align:center;border: 1px solid black; border-radius: 15px; height:80px;
         width: 95%;margin-top:20px; margin-left: 40px; background-color:#40E0D0; " >

      <font face="arial" size="25">Facility Attendance Trends</font>

      <img src="/images/coatOfArms.png" align="right"  style="height: 80%; top:20%" />
    </div>


    <div align="center" style="border: 1px solid black; border-radius: 15px; height:80%;
         width: 95%;margin-top:30px; margin-left: 40px; " >

      <div align="center" id= "graph" style="  width: 90%;
           margin-top: 2%; height: 90%; " >

      </div>


    </div>

    <script type="text/javascript">
      <!--
      slideShow(1000);

      setTimeout("window.location = '/common/next_path'", 6000 <%= "+ #{@duration.to_i * 60000}" %>);
      //-->
    </script>

  </body>

</html>

